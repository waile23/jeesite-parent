                <redis.port>6379</redis.port>
                <redis.pass></redis.pass>
                <redis.maxIdle>100</redis.maxIdle>
                <redis.maxTotal>300</redis.maxTotal>
                <redis.maxWaitMillis>10000</redis.maxWaitMillis>
                <redis.testOnBorrow>true</redis.testOnBorrow>
            </properties>
        </profile>
    </profiles>

    <build>
        <finalName>jeesite-data-provider</finalName>
        <filters>
            <filter>${project.basedir}/src/main/resources/config/applicationDataConfig.properties</filter>
        </filters>
        <resources>
            <resource>
                <directory>${project.basedir}/src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
	    <plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>2.4.1</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<transformers>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
									<mainClass> com.fsnip.DataProvider</mainClass>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/spring.handlers</resource>
								</transformer>
								<transformer
									implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
									<resource>META-INF/spring.schemas</resource>
								</transformer>
							</transformers>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
    </build>
</project>
